%h1 새로운 주제열기
.create
  - form_for [@subject.forum, @subject] do |f|
    = f.error_messages
    %fieldset
      %legend
        주제
      = f.text_field :title
    %fieldset
      %legend
        글쓰기
      %textarea{:id=>"revision_body",:name=>"revision[body]",:cols=>80,:rows=>21}
    .function
      %select#converter-selector
        %option(value="preview") Preview
        %option(value="HTML output") HTML output
      = f.submit "작성"
      = link_to '뒤로', @subject.forum
    %fieldset
      .output
        %h2 미리보기
